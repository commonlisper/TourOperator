@model TourOperator.Domain.Data.DomainModel.Country

@{
    ViewBag.Title = "AddCountry";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Добавить страну</h2>

@if (!ViewData.ModelState.IsValid)
{
    <p class="text-danger">Ошибки</p>
    <p class="text-warning">@Html.ValidationSummary()</p>
}

<form role="form" action="@Url.Action()" method="POST">
    <div class="form-group">
        <label for="Name">Название страны:</label>
        <input type="text" name="Name" id="Name" />
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>