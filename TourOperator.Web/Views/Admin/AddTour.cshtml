@model TourOperator.Web.Models.ViewModels.TourViewModel

@{
    ViewBag.Title = "Добавить Тур";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<form class="form-horizontal" role="form" action="@Url.Action()" method="POST">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.SelectedCountryId, new Dictionary<string, object> { { "class", "col-sm-3 control-label" } })
        @Html.DropDownListFor(model => model.SelectedCountryId, new SelectList(Model.Countries, "Value", "Text", Model.SelectedCountryId), new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelecterHealthResortId, new Dictionary<string, object> { { "class", "col-sm-3 control-label" } })
        @Html.DropDownListFor(model => model.SelecterHealthResortId, new SelectList(Model.HealthResorts, "Value", "Text", Model.SelecterHealthResortId), new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedHotelId, new Dictionary<string, object> { { "class", "col-sm-3 control-label" } })
        @Html.DropDownListFor(model => model.SelectedHotelId, new SelectList(Model.Hotels, "Value", "Text", Model.SelectedHotelId), new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tour.Price, new { @class = "col-sm-3 control-label" })
        @Html.TextBoxFor(model => model.Tour.Price, new Dictionary<string, object> { { "class", "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tour.Nights, new { @class = "col-sm-3 control-label" })
        @Html.TextBoxFor(model => model.Tour.Nights, new Dictionary<string, object> { { "class", "form-control" } })
    </div>

    <div class="form-group">
        @Html.ValidationSummary()
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>