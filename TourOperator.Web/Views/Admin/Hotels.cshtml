@model IEnumerable<IGrouping<IEnumerable<TourOperator.Domain.Data.Entities.Tour>, TourOperator.Domain.Data.Entities.Hotel>>

@{
    ViewBag.Title = "Отели";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<a class="btn btn-lg btn-info" href="@Url.Action("AddHotel", "Admin")">
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    Добавить
</a>

<br />
<br />

<table class="table table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>Название</th>
            <th>Категория</th>
            <th>Тип питания</th>
            <th>Команда</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tourGroup in Model)
        {
            <tr>
                <td colspan="4">
                    <h4>
                        <strong>Количество туров: @tourGroup.Key.Count()</strong>
                    </h4>
                </td>
            </tr>

            foreach (var hotel in tourGroup)
            {
                <tr>
                    <td>@hotel.Name</td>
                    <td>@hotel.Category</td>
                    <td>@hotel.TypeOfFood.Title</td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("EditHotel", "Admin", new { id = hotel.Id })">Редактировать</a>
                        <a class="btn btn-danger" href="@Url.Action("RemoveHotel", "Admin", new { id = hotel.Id })">Удалить</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a class="btn btn-lg btn-info" href="@Url.Action("AddHotel", "Admin")">
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    Добавить
</a>
