@using TourOperator.Web.Helpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LightTour</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class=" container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LightTour", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@Html.MenuActive("Countries", "Admin")">
                        @Html.ActionLink("Страны", "Countries", "Admin")
                    </li>
                    <li class="@Html.MenuActive("Tours", "Admin")">
                        @Html.ActionLink("Туры", "Tours", "Admin")
                    </li>
                    <li class="@Html.MenuActive("HealthResorts", "Admin")">
                        @Html.ActionLink("Курорты", "HealthResorts", "Admin")
                    </li>
                    <li class="@Html.MenuActive("Hotels", "Admin")">
                        @Html.ActionLink("Отели", "Hotels", "Admin")
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LightTour</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

