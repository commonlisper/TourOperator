@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "", @class = "" }))
    {
        @Html.AntiForgeryToken()

        <li>
            @Html.ActionLink("Привет " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
    }
}
else
{
    <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "" })</li>
    <li>@Html.ActionLink("Логин", "Login", "Account", routeValues: null, htmlAttributes: new { id = "" })</li>
}